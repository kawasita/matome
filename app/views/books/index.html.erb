<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <%= render 'books/new', book: @book %>
    </div>
    
    <div class="col-md-8">
      <h3 class="mt-3">本たち</h3>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>題名</th>
            <th>内容</th>
            <th>おすすめ度</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.book_title, book_path(book) %></td>
            <td><%= book.description %></td>
            <td>
              <%= render "rate",  book: book %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>