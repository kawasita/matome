<h3 class="mt-3">新規投稿</h3>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <%= f.label '題名' %>
    <%= f.text_field :book_title, class: "form-control", placeholder: "本の題名" %>
  </div>
  <div class="form-group">
    <%= f.label '内容' %>
    <%= f.text_area :description, class: "form-control", placeholder: "ネタバレしないように簡潔に" %>
  </div>
  <div>
    <%= render "rate_form", f: f, book: book %>
  </div>
  <%= f.submit '投稿する', class: "btn btn-success" %>
<% end %>
