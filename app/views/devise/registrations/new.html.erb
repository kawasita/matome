<div class="row">
  <div class="col-xs-12 mx-auto">
    <div class="text-center p-4">
      <h2><b>新規会員登録</b></h2>
    </div>
    <%= render "shared/error_messages", resource: resource %>
    
    <%= form_with model: @user, url: user_registration_path do |f| %>

      <div class="field form-group col-12">
        <%= f.label :"名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-6" %>
      </div>
      
      <div class="field form-group col-12">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %>
      </div>
        
      <div class="field form-group col-12">
        <%= f.label :"パスワード(6文字以上)" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "col-12", placeholder: '○○○○○○' %>
      </div>
    
      <div class="field form-group col-12">
        <%= f.label :"パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-12", placeholder: '○○○○○○' %>
      </div>
    
      <div class="actions text-center p-3 pb-5 mx-auto">
        <%= f.submit "新規登録",class: "btn btn-success px-4" %>
      </div>
    <% end %>
    
  </div>
</div>